{
  "name": "cc-sdk-web",
  "version": "1.0.0",
  "description": "The web SDK for the Connect Components project",
  "main": "src/index.js",
  "scripts": {
    "init": "cp env.tmpl .env",
    "build": "npm run build:dev",
    "dev": "webpack --config webpack.config.dev.js --mode development --watch",
    "build:dev": "webpack --config webpack.config.dev.js --mode development",
    "build:prod": "webpack --config webpack.config.prod.js --mode production",
    "lint": "eslint src/",
    "test": "npm run test:unit",
    "test:unit": "mocha 'src/**/*.spec.js'",
    "test:unit:coverage": "nyc npm run test:unit",
    "quality:unit-coverage": "npm run test:unit:coverage",
    "quality:types": "tsc",
    "quality:lint": "eslint --ext js .",
    "quality:lint:fix": "eslint --ext js . --fix",
    "security:package-audit": "npm audit ---production --audit-level=high"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.fini.city:connect-services/cc-sdk-web.git"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.23.2",
    "@babel/register": "^7.22.15",
    "chai": "^4.3.10",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.51.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "regenerator-runtime": "^0.13.11",
    "sinon": "^15.2.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "nyc": {
    "all": true,
    "cache": false,
    "check-coverage": true,
    "lines": 95,
    "functions": 95,
    "branches": 95,
    "statements": 95,
    "reporter": [
      "cobertura",
      "html",
      "lcov",
      "text"
    ],
    "include": [
      "src/"
    ],
    "exclude": [
      "src/**/index.js",
      "src/**/*.spec.js"
    ]
  }
}