{
  "name": "@mastercard/connect-components-web-sdk",
  "version": "1.1.3",
  "description": "The web SDK for the Connect Components project",
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/mastercard-connect-components-cjs.min.js",
  "module": "dist/mastercard-connect-components-esm.min.js",
  "exports": {
    ".": {
      "import": "./dist/mastercard-connect-components-esm.min.js",
      "require": "./dist/mastercard-connect-components-cjs.min.js",
      "umd": "./dist/mastercard-connect-components-umd.min.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "init": "cp env.tmpl .env",
    "build": "webpack --config webpack.config.prod.mjs --mode production",
    "build:clean": "[ -d dist ] && rm -r dist; mkdir dist",
    "build:debug": "webpack --config webpack.config.dev.mjs --mode development",
    "build:local": "cat variables/local > .env && npm run build:debug",
    "build:dev": "cat variables/dev-us > .env && npm run build:debug",
    "build:stage": "cat variables/stage-us > .env && npm run build:debug",
    "build:prod": "npm run build:clean && cat variables/prod-us > .env && webpack --config webpack.config.prod.mjs --mode production",
    "lint": "eslint src/",
    "test": "npm run test:unit",
    "test:unit": "mocha 'src/**/*.spec.js'",
    "test:unit:coverage": "nyc npm run test:unit",
    "quality:unit-coverage": "npm run test:unit:coverage",
    "quality:types": "tsc",
    "quality:lint": "eslint --ext .js,.ts src/",
    "quality:lint:fix": "eslint --ext .js,.ts src/ --fix",
    "security:package-audit": "npm audit ---production --audit-level=high"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.fini.city:connect-services/cc-sdk-web.git"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/register": "^7.28.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "chai": "^5.3.1",
    "dotenv-webpack": "^8.1.1",
    "eslint": "^9.33.0",
    "mocha": "^11.7.1",
    "nyc": "^17.1.0",
    "regenerator-runtime": "^0.14.1",
    "sinon": "^21.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "uglify-js": "^3.19.3",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "nyc": {
    "all": true,
    "cache": false,
    "check-coverage": true,
    "lines": 95,
    "functions": 95,
    "branches": 65,
    "statements": 95,
    "reporter": [
      "cobertura",
      "html",
      "lcov",
      "text"
    ],
    "include": [
      "src/"
    ],
    "exclude": [
      "src/**/index.js",
      "src/**/*.spec.js"
    ]
  }
}
