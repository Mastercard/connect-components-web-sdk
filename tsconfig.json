{
  "compilerOptions": {
    "lib": [
      "es2024",
      "dom"
    ],
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2024",
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "stripInternal": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.spec.js"
  ],
  "compileOnSave": false
}